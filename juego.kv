<IntroScreen>:
    size: self.size
    Image:
        source: 'images/072.zip'
        size:root.size
        anim_delay: 0.1

<MenuScreen>:
    size: self.size
    Image:
        size:root.size
        source:"images/background.jpg"
    GridLayout:
        size_hint: .25, .25
        cols: 1
        pos: root.center_x - root.center_x/4. , root.center_y - root.center_y/4.
        Button:
            size_hint: 1,.3
            text: 'Jugar'
            bold: True
            background_normal: 'images/button_normal.png'
            background_down: 'images/button_down.png'
            font_size: 15
            on_release: root.jugar()
        Button:
            size_hint: 1,.3
            text: 'Opciones'
            bold: True
            background_normal: 'images/button_normal.png'
            background_down: 'images/button_down.png'
            font_size: 15
            on_release: root.opciones()
        Button:
            size_hint: 1,.3
            text: 'Salir'
            bold: True
            background_normal: 'images/button_normal.png'
            background_down: 'images/button_down.png'
            font_size: 15
            on_release: root.exit()

<GameScreen>:
	FloatLayout:
	    id: layout

<GameOver>
    size_hint: 0.3, 0.5
    BoxLayout:
        center_x:self.center_x
        orientation: 'vertical'
        Label:
            text: 'Has perdido'
        BoxLayout:
            Label:
                text: 'Puntuación:'
            Label:
                id: score_f
                text: ""
        Label:
            text: "Introduce tus iniciales"
        GridLayout:
            cols:3
            Vacio:
                size_hint: 0.3,1
            InicialesInput:
                multiline:False
                id: iniciales
                size_hint: 0.3, 1
                font_size: 30
                text: "AAA"
            Vacio:
                size_hint: 0.3,1
        Button:
            id: cerrar_go
            text: 'Aceptar'
            bold: True
            background_normal: 'images/button_normal.png'
            background_down: 'images/button_down.png'
            font_size: 15
            size_hint: 1, 1.5
            on_release: root.enviar()

<Ranking>
    center: root.center
    BoxLayout:
        size: root.size
        center: root.center
        orientation: 'vertical'
        GridLayout:
            cols: 2
            size_hint: 1,2.6
            orientation: 'vertical'
            id: punt
        Button:
            id: cerrar_go
            text: 'Cerrar'
            bold: True
            background_normal: 'images/button_normal.png'
            background_down: 'images/button_down.png'
            font_size: 15
            size_hint: 1, 1
            on_release: root.cerrar()

<Puntuacion>
    padding_x: 5
    valign: 'middle'

<Score>
    pos_hint_y: 0
    BoxLayout:
        Label:
            text: "SCORE"
        Label:
            id: score
            text: str(root.score)

<OpcionesScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint:1,1
        Label:
            text: 'Modo:'
        BoxLayout:
            Label:
                text:"Defensa"
            CheckBox:
                id:modo1
                group: 'g1'
                active:True
                on_active:root.check1(self)
        BoxLayout:
            Label:
                text:"Invasión"
            CheckBox:
                id:modo2
                group:'g1'
                on_active:root.check2(self)
        Label:
            text: 'Dificultad:'
        BoxLayout:
            size_hint:1,1
            Slider:
                size_hint:0.8,1
                id: dificultad
                range: 1,3
                value: 2
                step:1
            Label
                size_hint:0.2,1
                text:str(int(dificultad.value))
        Label:
            text: 'Volumen:'
        BoxLayout:
            size_hint:1,1
            Slider:
                id: volumen
                value: self.value
            Label
                size_hint:0.2,1
                text:str(int(volumen.value))

<Tanque>:
    size_hint:None,None
    size:30,30
    id: tanque
    pos:self.pos
    size: self.size	
    Base:
        id: base
        center:root.center
    Torreta:
        id: torreta
        center:root.center
    Radar:
        id: radar
        center:root.center

<Base>:
    size_hint:None,None
    Image:
        id:img
        pos:root.pos
        source: "images/body.png"

<Torreta>:
    size_hint:None,None
    Scatter:
        id: sc
        pos:root.pos
        do_rotate: False
        do_scale: False
        do_translation: False
        rotation: self.rotation
        Image:
            source: "images/turret.png"

<Radar>:
    size_hint:None,None
    Scatter:
        center: root.center
        do_rotate: False
        do_scale: False
        do_translation: False
        rotation: root.rotation
        Image:
            source: "images/radar.png"

<TanqueMovil>:
    size_hint:None,None
    size:30,30
    id: tanque
    Base:
        id: base
        center:root.center
    Canon:
        id: canon
        center:root.center
    Radar:
        id: radar
        center:root.center

<Canon>:
    size_hint:None,None
    Scatter:
        pos:root.pos
        do_rotate: False
        do_scale: False
        do_translation: False
        Image:
            source: "images/turret.png"

<Ovni>
    size_hint:None,None
    size: 30,30
    Image:
        id: imagen
        pos:root.pos
        source: "images/ovni.png"
        size: root.size

<Disparo>
    size_hint:None,None
    size: 5,5
    pos: self.pos
    Image:
        id: imagen
        pos:root.pos
        source: "images/disparo.png"
        size: root.size